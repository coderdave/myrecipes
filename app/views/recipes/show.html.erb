<%= render 'shared/page_title', title: @recipe.name %>

<div class="col-8 offset-2 card card-body bg-light">
  <h4 class="center description"><strong>Steps: </strong></h4>
  <hr />
  <% if @recipe.ingredients.any? %>
    <p>Ingredients: <%= render @recipe.ingredients %></p>
  <% end %>
  <%= simple_format(@recipe.description) %>
  <hr />
  <div class="col">
    <div class="float-end">
      <p class="center">
        <em>Created by:</em>
      </p>
      <p class="center">
        <%= link_to gravatar_for(@recipe.chef), chef_path(@recipe.chef) %>
      </p>
      <p class="center my-0">
        <small>
          <%= @recipe.chef.chefname.capitalize %>
          <%= time_ago_in_words(@recipe.created_at) %> ago
        </small>

      </p >
      <strong class="d-flex justify-content-center text-primary" id="likes">
        <%= render 'likes/likes_counter', object: @recipe %>
      </strong>
    </div>
    </div>
  <div class="recipe-actions">
    <% if logged_in? && (current_chef == @recipe.chef || current_chef.admin?) %>
      <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: "btn btn-sm btn-warning" %>
      <%= link_to "Delete this recipe", recipe_path(@recipe), method: :delete, data: { confirm: "Are you sure you want to delete this recipe?" },  class: "btn btn-sm btn-danger" %>
    <% end %>
    <%= link_to "Return to recipes listing", recipes_path, class: "btn btn-sm btn-primary" %>
    <%= render  'likes/buttons', object: @recipe, class: "btn btn-sm px-3 btn-outline-primary" %>
    <div>
</div>
  </div>
</div>

<% if logged_in? %>
  <div class="row">
    <div class="col-8 offset-2 mt-3">
      <h3>Comments: </h3>
      <hr />
      <%= form_for([@recipe, @comment], remote: true, html: { role: "form" }) do |f| %>
        <div class="mb-3">
           <%= f.label :description, "Comment", class: "form-label" %>
          <div class="col-8">
            <%= f.text_area :description, id: 'recipe_comment', rows: 5, class: "form-control", placeholder: "Enter Comment Here" %>
          </div>
        </div>
        <%= f.submit "Submit Comment", class: "btn btn-primary btn-lg" %>
      <% end %>
      <hr />
    </div>
  </div>
<% end %>


<% if @recipe.comments.any? %>
  <div class="col-8 offset-2 mt-3">
    <h3>Prior Comments: </h3>
    <%# JS event listener (see recipe_comments_channel.js) %>
    <div id="messages">
      <%= render partial: 'comments/comments', object: @comments %>
    </div>
  </div>
<% else %>
  <div class="col-8 offset-2 mt-5">
    <h3>No comments yet!</h3>
  </div>
<% end %>
