<% obj.each do |recipe| %>
  <div class="row">
    <div class="col-1">
      <section class="chef_info">
        <%= gravatar_for(recipe.chef, size: 120) %>
      </section>
    </div>
    <div class="col offset-1">
      <div class="card card-body bg-light">
        <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
        <p><%= truncate(recipe.description, length: 150) %></p>
        <% if recipe.ingredients.any? %>
          <p>Ingredients: <%= render recipe.ingredients %></p>
        <% end %>
        <p>
          <span class="quiet">
            <small>
              Created <%= time_ago_in_words(recipe.created_at) %> ago by <%= recipe.chef.name.capitalize %>
                | <%= pluralize(recipe.comments.count, 'Comment') %>
                | <span id="likes_<%= recipe.id %>"><%= recipe.likes.count %></span>
                  <span id="like-word_<%= recipe.id %>"><%= recipe.likes.count == 1 ? 'like' : 'likes' %></span>
            </small>
          </span>
        </p>
          <div class="recipe-actions">

        <% if logged_in? && (current_chef == recipe.chef || current_chef.admin?) %>
            <%= link_to "Edit this recipe", edit_recipe_path(recipe), class: "btn btn-sm btn-warning" %>
            <%= link_to "Delete this recipe", recipe_path(recipe), method: :delete,data: { confirm: "Are you sure you want to delete this recipe?" },class: "btn btn-sm btn-danger" %>
        <% end %>
            <span id="toggle-like-button-<%= recipe.id %>">
              <%= render  'likes/buttons', object: recipe, class: "btn btn-sm px-3 btn-outline-primary" %>
            <span>
          </div>
      </div>
    </div>
  </div>
  <p />
<% end %>
